html
  title Timer
  head
    link(href="https://fonts.googleapis.com/css?family=Roboto:400,900", rel="stylesheet")
    link(href="index.css", rel="stylesheet")
    script(src="index.js")
  body
    svg#timer(viewBox="-43 -23 86 32")
      text#minutes(x="-25") 00
      text.colon(y="-2.5") :
      text#seconds(x="25") 00
      text.overtime(x="0",y="8") OVERTIME
    .help
      span.tip.button(data-key="p") <kbd>Space</kbd>/<kbd>P</kbd> start/pause/resume timer
      span.tip <kbd class="button" data-key="-">-</kbd>/<kbd class="button" data-key="+">+</kbd> adjust timer duration (–/+ 1 min)
      span.tip <kbd class="button" data-key="[">[</kbd>/<kbd class="button" data-key="]">]</kbd> adjust timer duration (–/+ 5 sec)
      span.tip.button(data-key="0") <kbd>0</kbd> zero out timer
      span.tip.button(data-key="r") <kbd>R</kbd> reset timer
      span.tip.button(data-key="\\") <kbd>\</kbd> toggle dark mode
      a.tip(href="https://github.com/ennation/timer") Github
